<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:background="@drawable/home_item_background">

    <TextView
        android:id="@+id/tv_home_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Goal 1"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="14sp"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_home_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        android:layout_marginTop="9dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_home_goal"/>

    <ImageView
        android:id="@+id/iv_home_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_home_star1"/>

    <ImageView
        android:id="@+id/iv_home_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_home_star2"/>

    <ImageView
        android:id="@+id/iv_home_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_home_star3"/>

    <ImageView
        android:id="@+id/iv_home_star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_home_star4"/>

    <TextView
        android:id="@+id/tv_home_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="자기소개서 제출 마감"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/gray1"
        android:textSize="17sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_home_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="D-9"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/gray1"
        android:textSize="20sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_home_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="진행도 : 80%"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/gray1"
        android:textSize="17sp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/pb_home"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="82dp"
        android:layout_height="7dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:max="100"
        android:progress="40"
        android:progressDrawable="@drawable/progress_bar_goal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
