<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyPage.ProfileActivity">

    <ImageView
        android:id="@+id/iv_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="32sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_profile_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_my_page_profile"
        android:layout_marginTop="77dp"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_edit" />

    <TextView
        android:id="@+id/tv_profile_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:layout_marginHorizontal="105dp"
        android:background="@drawable/shape_fill_blue_12"
        android:gravity="center"
        android:text="사진 수정"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_profile" />

    <TextView
        android:id="@+id/tv_profile_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태메시지"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue6"
        android:textSize="16sp"
        android:layout_marginTop="59dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_btn" />

    <EditText
        android:id="@+id/et_profile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_fill_white_blue_20"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        android:hint="상태 메시지가 없습니다."
        android:gravity="start|top"
        android:padding="16dp"
        android:textSize="18sp"
        android:fontFamily="@font/samliphopangche"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_message"/>

    <TextView
        android:id="@+id/tv_profile_edit_btn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginBottom="34dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shape_fill_blue_12"
        android:gravity="center"
        android:text="수정하기"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
