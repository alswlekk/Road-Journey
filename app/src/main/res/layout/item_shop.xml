<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="108dp"
    android:layout_height="180dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/item_shop_background">

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_sky"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="밤하늘"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_shop"/>

    <ImageView
        android:id="@+id/iv_shop_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_coin"
        android:layout_marginStart="14dp"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_shop" />

    <TextView
        android:id="@+id/tv_shop_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:layout_marginStart="7dp"
        android:text="2500"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_shop_coin"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
