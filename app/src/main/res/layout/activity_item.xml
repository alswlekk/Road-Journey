<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyPage.ProfileActivity">

    <ImageView
        android:id="@+id/iv_item_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보유한 아이템"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="32sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_item_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 :"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="16sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_back" />

    <Spinner
        android:id="@+id/sp_item"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/spinner_background"
        android:spinnerMode="dropdown"
        android:padding="8dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/white"
        android:popupBackground="@color/white"
        android:dropDownWidth="120dp"
        app:layout_constraintStart_toEndOf="@id/tv_profile_message"
        app:layout_constraintTop_toBottomOf="@id/iv_item_back" />


</androidx.constraintlayout.widget.ConstraintLayout>
