<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyPage.ProfileActivity">

    <ImageView
        android:id="@+id/iv_setting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_setting_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="32sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_setting_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_setting_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="51dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_setting_back" />

    <TextView
        android:id="@+id/tv_setting_alarm_activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 활성화"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_alarm" />

    <ImageView
        android:id="@+id/iv_setting_alarm_activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_off"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_alarm"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:id="@+id/tv_setting_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="42dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_alarm_activate" />

    <TextView
        android:id="@+id/tv_setting_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 공개 여부"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_friend" />

    <ImageView
        android:id="@+id/iv_setting_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_off"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_friend"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_setting_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 기록 공개 여부"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_profile" />

    <ImageView
        android:id="@+id/iv_setting_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_off"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_profile"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
