<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fill_white_30">

    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달성 실패."
        android:fontFamily="@font/samliphopangche"
        android:textColor="#FF6E46"
        android:textSize="36sp"
        android:layout_marginTop="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_goal_grow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캐릭터 성장도 -50"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/red4"
        android:textSize="24sp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_goal" />

    <TextView
        android:id="@+id/tv_goal_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="골드 -50"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/red4"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_goal_grow" />

    <TextView
        android:id="@+id/tv_save_btn"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/shape_fill_blue_25"
        android:gravity="center"
        android:text="확인"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_goal_coin" />

</androidx.constraintlayout.widget.ConstraintLayout>
