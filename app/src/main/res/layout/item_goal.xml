<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Step 1"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_goal_star1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_goal_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_goal_star2"/>

    <ImageView
        android:id="@+id/iv_goal_star2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_goal_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_goal_star3"/>

    <ImageView
        android:id="@+id/iv_goal_star3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_goal_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_goal_star4"/>

    <ImageView
        android:id="@+id/iv_goal_star4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_goal_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_goal_star5"/>

    <ImageView
        android:id="@+id/iv_goal_star5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_goal_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_goal_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_fill_gray_10"
        android:layout_marginTop="11dp"
        android:gravity="start|top"
        android:padding="16dp"
        android:textSize="17sp"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:maxLines="5"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:imeOptions="actionDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_goal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
