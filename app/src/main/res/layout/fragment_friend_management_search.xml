<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Friend.FriendManagementActivity">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_friend_no_result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색 결과가 없습니다."
        android:textColor="@color/gray4"
        android:textSize="28sp"
        android:fontFamily="@font/samliphopangche"

        />


    <EditText
        android:id="@+id/et_friend_management_search"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력해주세요."
        android:textColor="#003A9A"
        android:textColorHint="@color/gray4"
        android:textSize="24sp"
        android:fontFamily="@font/samliphopangche"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="29dp"
        />

    <ImageView
        android:id="@+id/iv_friend_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_friend_search"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_friend_management_search" />

    <ImageView
        android:id="@+id/iv_friend_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/et_friend_management_search"
        android:layout_marginTop="25dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_line"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rv_friend_search_result"
            app:layout_constraintTop_toTopOf="@id/iv_friend_line"
            />
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>