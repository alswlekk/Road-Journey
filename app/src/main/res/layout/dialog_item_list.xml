<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fill_white_30">

    <TextView
        android:id="@+id/tv_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출현 아이템 목록"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="24sp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_list_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_dialog_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배경"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_item_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캐릭터"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_item_background" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_item_deco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장식품"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_item_character" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_deco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_deco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>