<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fill_white_30">

    <ImageView
        android:id="@+id/iv_goal_detail_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_dialog_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_goal_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Goal 1"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="33dp"/>

    <ImageView
        android:id="@+id/iv_goal_detail_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_detail_id"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal_detail_id"
        app:layout_constraintStart_toEndOf="@+id/tv_goal_detail_id"/>

    <ImageView
        android:id="@+id/iv_goal_detail_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_detail_id"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal_detail_id"
        app:layout_constraintStart_toEndOf="@id/iv_goal_detail_star1"/>

    <ImageView
        android:id="@+id/iv_goal_detail_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_detail_id"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal_detail_id"
        app:layout_constraintStart_toEndOf="@id/iv_goal_detail_star2"/>

    <ImageView
        android:id="@+id/iv_goal_detail_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_detail_id"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal_detail_id"
        app:layout_constraintStart_toEndOf="@id/iv_goal_detail_star3"/>

    <ImageView
        android:id="@+id/iv_goal_detail_star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_detail_id"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal_detail_id"
        app:layout_constraintStart_toEndOf="@id/iv_goal_detail_star4"/>

    <TextView
        android:id="@+id/tv_goal_detail_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2024.01.01 ~ 2024.02.15"
        android:textColor="#777777"
        android:fontFamily="@font/samliphopangche"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_detail_id"
        app:layout_constraintStart_toStartOf="@+id/tv_goal_detail_id" />

    <ProgressBar
        android:id="@+id/pb_goal_detail"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:max="100"
        android:progress="40"
        android:progressDrawable="@drawable/progress_bar_goal"
        android:layout_marginTop="11dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_detail_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_goal_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="자기소개서 제출 마감"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_detail_period"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_goal_detail_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="D-9"
        android:textColor="#777777"
        android:fontFamily="@font/samliphopangche"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_detail_title"/>

    <TextView
        android:id="@+id/tv_goal_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이력, 자기소개, 성장 배경 작성 필요\n작성 후 멘토님께 메일 보내서 점검받기\n이후 추천서 받아오기"
        android:fontFamily="@font/samliphopangche"
        android:textSize="17sp"
        android:background="@drawable/shape_fill_gray5_10"
        android:textColor="@color/blue2"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="15dp"
        android:paddingBottom="19dp"
        android:paddingTop="19dp"
        android:paddingStart="13dp"
        app:layout_constraintStart_toStartOf="@+id/tv_goal_detail_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_detail_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_goal_detail_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_detail_content" />

    <TextView
        android:id="@+id/tv_goal_detail_btn_fail"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginTop="54dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/shape_fill_red3_25"
        android:gravity="center"
        android:text="달성 실패"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_goal_detail_goal" />

    <TextView
        android:id="@+id/tv_goal_detail_btn_modify"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/shape_fill_blue_25"
        android:gravity="center"
        android:text="수정"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_detail_btn_fail" />

    <TextView
        android:id="@+id/tv_goal_detail_btn_success"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="19dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/shape_fill_gray3_25"
        android:gravity="center"
        android:text="달성 완료"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_detail_btn_modify" />

</androidx.constraintlayout.widget.ConstraintLayout>