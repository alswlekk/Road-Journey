<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateAccount.CreateAccount3Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="34dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cl_top_count"
        >
        <ImageView
            android:id="@+id/iv_top_count1"
            android:layout_width="104dp"
            android:layout_height="10dp"
            android:src="@drawable/create_account_filled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_top_count2"
            android:layout_width="104dp"
            android:layout_height="10dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/create_account_filled"
            app:layout_constraintStart_toEndOf="@+id/iv_top_count1"
            app:layout_constraintTop_toTopOf="@+id/iv_top_count1" />

        <ImageView
            android:id="@+id/iv_top_count3"
            android:layout_width="104dp"
            android:layout_height="10dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/create_account_unfilled"
            app:layout_constraintStart_toEndOf="@+id/iv_top_count2"
            app:layout_constraintTop_toTopOf="@+id/iv_top_count1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_request_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:fontFamily="@font/samliphopangche"
        android:text="프로필을 설정해주세요."
        android:textColor="@color/blue2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_top_count" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile_background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="75dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_request_profile_text">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_create_account_profile" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_add_photo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/shape_fill_blue1_15"
        android:fontFamily="@font/samliphopangche"
        android:text="사진 추가"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_profile_background" />

    <TextView
        android:id="@+id/tv_state_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/samliphopangche"
        android:text="상태메시지"
        android:textColor="@color/blue6"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/et_state_message"
        app:layout_constraintTop_toBottomOf="@id/btn_add_photo" />

    <EditText
        android:textColor="#003A9A"
        android:id="@+id/et_state_message"
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_fill_white_blue_20"
        android:fontFamily="@font/samliphopangche"
        android:hint="상태메시지가 없습니다."
        android:paddingStart="16dp"
        android:paddingBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_state_message" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/btn_next_filled"
        android:fontFamily="@font/samliphopangche"
        android:text="다음으로"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/et_state_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>