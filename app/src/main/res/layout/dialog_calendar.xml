<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fill_white_30">

    <TextView
        android:id="@+id/tv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 선택"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:theme="@style/CalenderViewCustom"
        app:mcv_selectionMode="single"
        app:mcv_showOtherDates="none"
        app:mcv_firstDayOfWeek="sunday"
        app:mcv_rightArrow="@drawable/ic_calendar_forward"
        app:mcv_leftArrow="@drawable/ic_calendar_back"
        app:mcv_dateTextAppearance="@style/CalenderViewDateCustomText"
        app:mcv_weekDayTextAppearance="@style/CalenderViewWeekCustomText"
        android:layout_marginTop="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_calendar_btn_cancel"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_fill_red3_10"
        android:gravity="center"
        android:text="취소"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_calendar_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_view" />

    <TextView
        android:id="@+id/tv_calendar_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_fill_blue_10"
        android:gravity="center"
        android:text="확인"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tv_calendar_btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
