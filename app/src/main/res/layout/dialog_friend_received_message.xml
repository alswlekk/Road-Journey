<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fill_white_30"
    android:paddingBottom="26dp"
    >

    <ImageView
        android:id="@+id/iv_friend_received_message_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_dialog_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_friend_received_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="자기 소개서 제출 마감"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="29dp"
        />

    <TextView
        android:id="@+id/tv_friend_received_message_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2024.01.01 ~ 2024.02.15"
        android:textColor="#777777"
        android:fontFamily="@font/samliphopangche"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_title"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/tv_friend_received_message_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="D-9"
        android:textColor="#777777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_period"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="31dp"
        />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_period"
            app:layout_constraintStart_toStartOf="@id/tv_friend_received_message_period"
            android:layout_marginTop="26dp"
            android:src="@drawable/ic_home_star"
            android:id="@+id/iv_friend_received_message_star1"
            />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_period"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_star1"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_star2"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_period"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_star2"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_star3"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_period"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_star3"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_star4"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_period"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_star4"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_star5"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_friend_received_message_category"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="경쟁"
        android:textSize="14sp"
        android:background="@drawable/shape_fill_blue_20"
        android:gravity="center"
        android:textColor="@color/blue1"
        android:fontFamily="@font/samliphopangche"
        app:layout_constraintTop_toTopOf="@id/iv_friend_received_message_star1"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_received_message_star1"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_star5"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tv_friend_received_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_category"
        android:text="이력, 자기소개, 성장 배경 작성 필요\n작성 후 멘토님께 메일 보내서 점검받기\n이후 추천서 받아오기"
        android:fontFamily="@font/samliphopangche"
        android:textSize="17sp"
        android:background="@drawable/shape_fill_gray5_10"
        android:textColor="@color/blue2"
        android:layout_marginTop="19dp"
        android:paddingTop="19dp"
        android:paddingStart="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/iv_friend_received_message_star1"
        android:paddingBottom="19dp"
        />
    
    <TextView
        android:id="@+id/tv_friend_received_message_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1"
        android:textSize="18sp"
        android:textColor="@color/blue2"
        android:fontFamily="@font/samliphopangche"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_friend_received_message_step1"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step1"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step1_star1"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step1_star1"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step1"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step1_star2"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step1_star2"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step1"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step1_star3"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step1_star3"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step1"
        android:src="@drawable/ic_home_star"
        android:visibility="gone"
        android:id="@+id/iv_friend_received_message_step1_star4"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step1_star4"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step1"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step1_star5"
        android:visibility="gone"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fill_gray5_10"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_step1"
        app:layout_constraintStart_toStartOf="@id/tv_friend_received_message_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="9dp"
        android:paddingStart="7dp"
        android:paddingTop="8dp"
        android:paddingBottom="7dp"
        android:textSize="15sp"
        android:text="이력 작성하기"
        android:textColor="@color/blue2"
        android:fontFamily="@font/samliphopangche"
        android:id="@+id/tv_friend_received_message_step1_content"
        />


    <TextView
        android:id="@+id/tv_friend_received_message_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2"
        android:textSize="18sp"
        android:textColor="@color/blue2"
        android:fontFamily="@font/samliphopangche"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_step1_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_friend_received_message_step2"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step2"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step2_star1"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step2_star1"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step2"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step2_star2"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step2_star2"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step2"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step2_star3"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step2_star3"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step2"
        android:src="@drawable/ic_home_star"
        android:visibility="gone"
        android:id="@+id/iv_friend_received_message_step2_star4"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_friend_received_message_step2_star4"
        app:layout_constraintTop_toTopOf="@id/tv_friend_received_message_step2"
        android:src="@drawable/ic_home_star"
        android:id="@+id/iv_friend_received_message_step2_star5"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_friend_received_message_step2_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fill_gray5_10"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_step2"
        app:layout_constraintStart_toStartOf="@id/tv_friend_received_message_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="9dp"
        android:paddingStart="7dp"
        android:paddingTop="8dp"
        android:paddingBottom="7dp"
        android:textSize="15sp"
        android:text="자기소개 및 성장 배경 작성하기"
        android:textColor="@color/blue2"
        android:fontFamily="@font/samliphopangche"
        />


    <Button
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_step2_content"
        android:id="@+id/btn_friend_received_message_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:width="130dp"
        android:height="50dp"
        android:background="@drawable/shape_fill_blue1_25"
        android:fontFamily="@font/samliphopangche"
        android:text="수락"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/tv_friend_received_message_step2_content"
        android:id="@+id/btn_friend_received_message_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:width="130dp"
        android:height="50dp"
        android:background="@drawable/shape_fill_red2_25"
        android:fontFamily="@font/samliphopangche"
        android:text="거절"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>