<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyPage.MyPageFragment">

    <TextView
        android:id="@+id/tv_my_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_my_page_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_my_page_alarm"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_my_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_my_page_profile"
        android:layout_marginTop="73dp"
        android:layout_marginHorizontal="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_my_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이르미"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="144dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_my_page" />

    <TextView
        android:id="@+id/tv_my_page_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="120dp"
        android:background="@drawable/shape_fill_blue_12"
        android:gravity="center"
        android:text="프로필 수정"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_page_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_btn">

        <ImageView
            android:id="@+id/iv_my_page_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:src="@drawable/ic_my_page_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_my_page_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보유한 아이템 보기"
            android:fontFamily="@font/samliphopangche"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_my_page_item"
            app:layout_constraintStart_toEndOf="@id/iv_my_page_item"
            app:layout_constraintTop_toTopOf="@id/cl_my_page_item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_page_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/cl_my_page_item">

        <ImageView
            android:id="@+id/iv_my_page_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:src="@drawable/ic_my_page_challenge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_my_page_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도전 과제"
            android:fontFamily="@font/samliphopangche"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_my_page_challenge"
            app:layout_constraintStart_toEndOf="@id/iv_my_page_challenge"
            app:layout_constraintTop_toTopOf="@id/cl_my_page_challenge"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_page_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/cl_my_page_challenge">

        <ImageView
            android:id="@+id/iv_my_page_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:src="@drawable/ic_my_page_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_my_page_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정"
            android:fontFamily="@font/samliphopangche"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_my_page_account"
            app:layout_constraintStart_toEndOf="@id/iv_my_page_account"
            app:layout_constraintTop_toTopOf="@id/cl_my_page_account"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_page_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/cl_my_page_account">

        <ImageView
            android:id="@+id/iv_my_page_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:src="@drawable/ic_my_page_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_my_page_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:fontFamily="@font/samliphopangche"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_my_page_setting"
            app:layout_constraintStart_toEndOf="@id/iv_my_page_setting"
            app:layout_constraintTop_toTopOf="@id/cl_my_page_setting"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
