<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddGoal.AddGoalActivity">

    <ScrollView
        android:id="@+id/sv_add_goal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_add_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_add_goal"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@drawable/shape_fill_blue1_30"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_add_goal_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_white"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_add_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 생성하기"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/iv_add_goal_back"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_add_goal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 이름"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="56dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_add_goal_back" />

            <EditText
                android:id="@+id/et_add_goal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_fill_white_25"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue2"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:imeOptions="actionDone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_name"/>

            <TextView
                android:id="@+id/tv_add_goal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기간"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue2"
                android:textSize="16sp"
                android:layout_marginTop="47dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_add_goal" />

            <TextView
                android:id="@+id/tv_add_goal_long"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_fill_blue1_20"
                android:text="반복"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue1"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_date" />

            <TextView
                android:id="@+id/tv_add_goal_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1일"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue1"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="140dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_date" />

            <TextView
                android:id="@+id/tv_add_goal_each"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마다"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/tv_add_goal_day"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_date" />

            <TextView
                android:id="@+id/tv_add_goal_many"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3회"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue1"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/tv_add_goal_each"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_date" />

            <TextView
                android:id="@+id/tv_add_goal_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반복"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/tv_add_goal_many"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_date" />

            <TextView
                android:id="@+id/tv_add_goal_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="난이도"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue2"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_long" />

            <LinearLayout
                android:id="@+id/ll_add_goal_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_hard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_add_goal_star1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_goal_star"
                    android:layout_marginHorizontal="11dp" />

                <ImageView
                    android:id="@+id/iv_add_goal_star2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_goal_star"
                    android:layout_marginHorizontal="11dp" />

                <ImageView
                    android:id="@+id/iv_add_goal_star3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_goal_star"
                    android:layout_marginHorizontal="11dp" />

                <ImageView
                    android:id="@+id/iv_add_goal_star4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_goal_star"
                    android:layout_marginHorizontal="11dp" />

                <ImageView
                    android:id="@+id/iv_add_goal_star5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_goal_star"
                    android:layout_marginHorizontal="11dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_add_goal_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 내용"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue2"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_add_goal_stars" />

            <EditText
                android:id="@+id/et_add_goal_detail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/shape_fill_gray1_10"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="start|top"
                android:padding="16dp"
                android:textSize="17sp"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue2"
                android:maxLines="5"
                android:scrollHorizontally="false"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_detail"/>

            <TextView
                android:id="@+id/tv_add_goal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하위 목표 종류"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/blue2"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_add_goal_detail" />

            <TextView
                android:id="@+id/tv_add_goal_normal"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="기본"
                android:background="@drawable/shape_fill_blue1_10"
                android:gravity="center"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_type" />

            <TextView
                android:id="@+id/tv_add_goal_addtional"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="단계별"
                android:background="@drawable/shape_fill_blue8_10"
                android:gravity="center"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="130dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_type" />

            <TextView
                android:id="@+id/tv_add_goal_check"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="체크리스트"
                android:background="@drawable/shape_fill_blue8_10"
                android:gravity="center"
                android:fontFamily="@font/samliphopangche"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="240dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_type" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_add_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_check"/>

            <ImageView
                android:id="@+id/iv_add_goal_plus"
                android:src="@drawable/ic_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@id/iv_add_goal_minus"
                app:layout_constraintTop_toBottomOf="@id/rv_add_goal"/>

            <ImageView
                android:id="@+id/iv_add_goal_minus"
                android:src="@drawable/ic_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_add_goal"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_goal_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_goal_normal">

                <TextView
                    android:id="@+id/tv_add_goal_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:text="공동 목표로 설정할까요?"
                    android:fontFamily="@font/samliphopangche"
                    android:textColor="@color/blue2"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/iv_add_goal_share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_toggle_off"
                    android:layout_marginEnd="22dp"
                    android:layout_marginVertical="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_goal_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_add_goal_share">

                <TextView
                    android:id="@+id/tv_add_goal_friend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:text="해당 목표를 친구에게 공개할까요?"
                    android:fontFamily="@font/samliphopangche"
                    android:textColor="@color/blue2"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/iv_add_goal_friend_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_toggle_off"
                    android:layout_marginEnd="22dp"
                    android:layout_marginVertical="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_add_goal_btn"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_fill_gray3_25"
                android:gravity="center"
                android:text="저장"
                android:fontFamily="@font/samliphopangche"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_add_goal_friend" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

