<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fill_white_30">

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="골드가 부족합니다."
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="24sp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_save_btn"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/shape_fill_blue_25"
        android:gravity="center"
        android:text="돌아가기"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_success" />

</androidx.constraintlayout.widget.ConstraintLayout>
