<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage.ChangePwFragment">

    <ImageView
        android:id="@+id/iv_change_pw_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_account_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/samliphopangche"
        android:text="계정 관리"
        android:textColor="@color/blue2"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/iv_change_pw_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pw_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/samliphopangche"
        android:text="변경할 비밀번호를 입력해주세요."
        android:textColor="@color/blue2"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/iv_change_pw_back"
        app:layout_constraintTop_toBottomOf="@id/iv_change_pw_back" />

    <LinearLayout
        android:id="@+id/ll_change_account_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/tv_pw_change"
        app:layout_constraintTop_toBottomOf="@id/tv_pw_change">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samliphopangche"
            android:text="비밀번호"
            android:textColor="@color/blue6"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_change_account_pw"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_login"
            android:fontFamily="@font/samliphopangche"
            android:hint="테스트"
            android:paddingStart="21dp"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/samliphopangche"
            android:text="영문, 숫자, 특수문자 포함 10자 이상 입력해주세요."
            android:textColor="@color/red1"
            android:textSize="16sp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_change_account_pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/tv_pw_change"
        app:layout_constraintTop_toBottomOf="@id/ll_change_account_pw">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samliphopangche"
            android:text="비밀번호 확인"
            android:textColor="@color/blue6"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_change_account_pw_check"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_login"
            android:fontFamily="@font/samliphopangche"
            android:hint="테스트"
            android:paddingStart="21dp"
            android:paddingTop="7dp"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/samliphopangche"
            android:text="입력하신 비밀번호가 일치하지 않습니다."
            android:textColor="@color/red1"
            android:textSize="16sp"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_complete_unfilled"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_next_unfilled"
        android:fontFamily="@font/samliphopangche"
        android:text="완료하기"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="visible"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_complete_filled"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_next_filled"
        android:fontFamily="@font/samliphopangche"
        android:text="완료하기"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="invisible"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>