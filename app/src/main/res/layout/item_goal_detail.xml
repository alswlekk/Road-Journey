<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Step 1"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_goal_star1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal"
        app:layout_constraintStart_toEndOf="@+id/tv_goal"/>

    <ImageView
        android:id="@+id/iv_goal_star2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal"
        app:layout_constraintStart_toEndOf="@id/iv_goal_star1"/>

    <ImageView
        android:id="@+id/iv_goal_star3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal"
        app:layout_constraintStart_toEndOf="@id/iv_goal_star2"/>

    <ImageView
        android:id="@+id/iv_goal_star4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal"
        app:layout_constraintStart_toEndOf="@id/iv_goal_star3"/>

    <ImageView
        android:id="@+id/iv_goal_star5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toTopOf="@+id/tv_goal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal"
        app:layout_constraintStart_toEndOf="@id/iv_goal_star4"/>

    <TextView
        android:id="@+id/iv_goal_detail_btn"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_fill_blue_25"
        android:gravity="center"
        android:text="달성 완료"
        android:fontFamily="@font/samliphopangche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/tv_goal"
        app:layout_constraintBottom_toBottomOf="@id/tv_goal"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_goal_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fill_gray1_10"
        android:layout_marginTop="11dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:fontFamily="@font/samliphopangche"
        android:textColor="@color/blue2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_goal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
