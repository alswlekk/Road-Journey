<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RoadJourney" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.RoadJourney" parent="Base.Theme.RoadJourney" />

    <style name="Widget.My.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">true</item>
        <item name="overlapAnchor"> true</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="fontFamily">@font/samliphopangche</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="fontFamily">@font/samliphopangche</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/gray5</item>
        <item name="fontFamily">@font/samliphopangche</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/samliphopangche</item>
    </style>
</resources>
